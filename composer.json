{
    "name": "giacomomasseron/php-clean-architecture",
    "description": "PHP version of the Clean Architecture by Robert C. Martin (Uncle Bob)",
    "keywords": [
        "Giacomo Masseroni",
        "clean-architecture"
    ],
    "homepage": "https://github.com/giacomomasseron/php-clean-architecture",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "GiacomoMasseroni\\PHPCleanArchitecture\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Giacomo Masseroni",
            "email": "giacomom@gmail.com",
            "role": "Developer"
        }
    ],
    "minimum-stability": "dev",
    "require": {
    },
    "require-dev": {
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-arch": "^3.0",
        "pestphp/pest-plugin-type-coverage": "^3.2",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "rector/rector": "^2.0",
        "phpstan/phpstan": "2.1.x-dev",
        "friendsofphp/php-cs-fixer": "dev-master"
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "php-cs-fixer fix src",
        "refactor": "rector",
        "test:lint": "php-cs-fixer check src",
        "test:refactor": "rector --dry-run",
        "test:types": "phpstan analyse -l 6 src",
        "test:arch": "pest --filter=arch",
        "test:type-coverage": "pest --type-coverage --min=100",
        "test:unit": "pest",
        "test": [
            "@test:lint",
            "@test:refactor",
            "@test:types",
            "@test:unit"
        ]
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    }
}
